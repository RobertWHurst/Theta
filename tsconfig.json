{
  "compilerOptions": {
    "target": "es6",  
    "module": "commonjs",
    "outDir": "./dist",  
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["esnext"]
  }
}
